generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model Pokemon {
  id         Int            @id
  name       String         @db.VarChar(255)
  form_name  String?        @db.VarChar(255)
  abilities  String[]
  image_url  String         @db.VarChar(255)
  sprite_url String         @db.VarChar(255)
  species_id Int
  is_default Boolean
  height     Int
  weight     Int

  species    PokemonSpecies @relation(fields: [species_id], references: [id])
  types      Type[]
}

model PokemonSpecies {
  id              Int       @id
  name            String    @db.VarChar(255)
  full_name       String    @db.VarChar(255)
  left_name       String?
  right_name      String?
  left_full_name  String?
  right_full_name String?
  base_happiness  Int
  capture_rate    Int
  egg_cycles      Int
  egg_groups      String[]
  growth_rate     String
  flavor_texts    String[]
  gender_rate     Int
  genus           String?
  is_legendary    Boolean
  is_mythical     Boolean
  
  pokemon         Pokemon[]
}

model Type {
  id                 Int       @id
  name               String    @db.VarChar(255)

  double_damage_from Type[]    @relation("DoubleDamage")
  double_damage_to   Type[]    @relation("DoubleDamage")
  half_damage_from   Type[]    @relation("HalfDamage")
  half_damage_to     Type[]    @relation("HalfDamage")
  no_damage_from     Type[]    @relation("NoDamage")
  no_damage_to       Type[]    @relation("NoDamage")
  pokemon            Pokemon[]
}

model User {
  id        String   @id
  username  String   @unique
  email     String   @unique
  password  String
  isAdmin   Boolean  @default(false)
  createdAt DateTime @default(now())
}
